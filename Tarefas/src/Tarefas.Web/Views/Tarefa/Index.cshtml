@model IEnumerable<Tarefas.Web.Models.Tarefa>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Titulo)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th>@Html.DisplayNameFor(model => model.Concluida)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Descricao</td>
                <td>@item.Concluida</td>
                
                <td><a asp-controller="Tarefa" asp-action="Details" asp-route-id="@item.Id">Detalhes</a></td>
                <td><a asp-controller="Tarefa" asp-action="Update" asp-route-id="@item.Id">Atualizar</a></td>
                <td><a asp-controller="Tarefa" asp-action="Delete" asp-route-id="@item.Id">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>

